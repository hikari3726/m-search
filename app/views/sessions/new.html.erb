<div class="login-wrapper background-color">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <div class="new-container white">
          <h2 class="text-80 center title">ログイン</h2>
          <div class="new-form">
            <%= form_for :session, url: login_path do |f| %>
              <div class="form-group">
                <p class="font-weight">メールアドレス</p>
                <%= f.text_field :email, class: 'form-control' %> 
              </div>
              <div class="form-group">
                <p class="font-weight">パスワード</p>
                <%= f.password_field :password, class: 'form-control' %>
              </div>
              <%= f.submit "ログイン", class: 'btn-block btn login-btn' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
