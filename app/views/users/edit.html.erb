<div class="user-edit-wrapper background-color">
  <div class="container">
    <div class="row">
      
      <div class="col-md-offset-3 col-md-6">
        <div class="edit-container white">
          <h2 class="text-80 center">プロフィール編集</h2>
            <%= form_for @user do |f| %>
              <div class="form-container">
                <div class="form-group">
                  <div class='center'>
                    <% if @user.image? %>
                      <%= image_tag @user.image.url, class: 'user-image', id: :img_prev %>
                    <% else %>
                     <%= image_tag "man.png", id: :img_prev %>
                    <% end %>
                  </div>
                  <div class='center'>
                    <label>
                      <p class='image-btn'>画像をアップロード</p>
                      <%= f.file_field :image, class: 'image-form', id: :user_img %>
                    </label>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label :name, class: 'btn-text' %>
                  <%= f.text_field :name, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label :gender, class: 'btn-text' %>
                  <%= f.select :gender, [["男性", "男性"], ["女性", "女性"]], class: 'form-control selectpicker' %>
                </div>
                <div class="form-group">
                  <%= f.label :age, class: 'btn-text' %>
                  <%= f.number_field :age, min: 1, max: 100, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label :birthplace, class: 'btn-text' %>
                  <%= f.select :prefecture, User.prefectures.keys, { }, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label :description, class: 'btn-text' %>
                  <%= f.text_area :description, placeholder: '300字以内', rows: 7, class: 'form-control' %>
                </div>
                <div class="form-group">
                 <%= f.label :artist, class: 'btn-text' %>
                 <%= f.text_area :artist, placeholder: '300字以内', rows: 7, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label :password, class: 'btn-text' %>
                  <%= f.password_field :password, class: 'form-control' %>
                </div>
                <%= f.submit "編集", class: 'btn-block btn btn-default' %>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>