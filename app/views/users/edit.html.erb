<div class="user-edit-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <div class="edit-container background-color">
          <h2 class="text center">プロフィール編集</h2>
            <%= form_for @user do |f| %>
              <div class="form-container">
                <div class="form-group">
                  <%= f.label :image %>
                  <%= f.file_field :image %>
                </div>
                <div class="form-group">
                  <%= f.label :name, class: 'btn-text' %>
                  <%= f.text_field :name, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label :gender, class: 'btn-text' %>
                  <%= f.text_field :gender, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label :age, class: 'btn-text' %>
                  <%= f.text_field :age, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label :birthplace, class: 'btn-text' %>
                  <%= f.text_field :birthplace, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label :description, class: 'btn-text' %>
                  <%= f.text_area :description, class: 'form-control long-form' %>
                </div>
                <div class="form-group">
                 <%= f.label :artist, class: 'btn-text' %>
                 <%= f.text_area :artist, class: 'form-control long-form' %>
                </div>
                <div class="form-group">
                  <%= f.label :password, class: 'btn-text' %>
                  <%= f.password_field :password, class: 'form-control' %>
                </div>
                <%= f.submit "編集", class: 'btn-block' %>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>