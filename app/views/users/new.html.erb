<div class="user-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-2 col-md-8">
        <div class="new-container background-color">
          <h2 class="text center">新規登録</h2>
          <div class="new-form">
            <%= form_for @user do |f| %>
              <%= render 'layouts/error_messages', model: f.object %>
              <div class="form-group">
                <%= f.label :name, class: 'btn-text' %>
                <%= f.text_field :name, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :email, class: 'btn-text' %>
                <%= f.text_field :email, class: 'form-control' %> 
              </div>
              <div class="form-group">
                <%= f.label :password, class: 'btn-text' %>
                <%= f.password_field :password, placeholder: '８文字以上で英数字を入れてください', class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :password_confimation, class: 'btn-text' %>
                <%= f.password_field :password_confimation, class: 'form-control' %>
              </div>
              <%= f.submit "登録", class: 'btn-block btn btn-default' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>