<div class="user-new-wrapper background-color">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <div class="new-container white">
          <h2 class="text center">新規登録</h2>
          <div class="new-form">
            <%= form_for @user do |f| %>
              <%= render 'layouts/error_messages', model: f.object %>
              <div class="form-group">
                <div class='center'>
                  <% if @user.image? %>
                    <%= image_tag @user.image.url, class: 'user-image', id: :img_prev %>
                  <% else %>
                    <%= image_tag "man.png", class: 'user-image', id: :img_prev %>
                  <% end %>
                </div>
                <div class='center'>
                  <label>
                    <p class='image-btn'>画像を選択</p>
                    <%= f.file_field :image, class: 'image-form', id: :user_img %>
                  </label>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :name, class: 'btn-text' %>
                <%= f.text_field :name, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :email, class: 'btn-text' %>
                <%= f.text_field :email, class: 'form-control' %> 
              </div>
              <div class="form-group">
                <%= f.label :password, class: 'btn-text' %>
                <%= f.password_field :password, placeholder: '８文字以上、英数字を入れてください', class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :password_confimation, class: 'btn-text' %>
                <%= f.password_field :password_confimation, class: 'form-control' %>
              </div>
              <%= f.submit "登録", class: 'btn-block btn login-btn' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>