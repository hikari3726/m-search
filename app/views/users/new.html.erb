<div class="user-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <div class="new-container">
          <h2 class="text">新規登録</h2>
          <%= form_for @user do |f| %>
            <div class="form-group">
              <%= f.label :name, class: 'btn-text' %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :email, class: 'btn-text' %>
              <%= f.text_field :email, class: 'form-control' %> 
            </div>
            <%= f.submit "登録", class: 'btn-block' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>