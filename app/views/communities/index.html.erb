<div class="community-index-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-2">
        <%= render :partial => 'users/profile' %>
      </div>
     
      <div class="col-md-8">
        <div class="index-container background-color">
          <h2 class="text center">コミュニティ一覧</h2>
          <% @communities. each do |community| %>
            <div class="index">
              <%= image_tag community.image.url, class: 'index-image' %>
              <div class="title-description new-line">
                <p class="index-title"><%= community.title %></p>
                <p class="member-count">参加メンバー</p>
                <p class="join-member-count"><%= community.join_communities.count %>人</p>
              </div>
              <%= link_to "詳細", community_path(community.id) ,class: 'new-btn btn btn-default' %>
            </div>
          <% end %>
        </div>
      </div>
     
      <div class="col-md-2">
        <div class="search-container">
          <%= search_form_for @q do |f| %>
            <%= f. search_field :title_cont %>
            <%= f.submit "検索", class: 'btn btn-default' %>
          <% end %>
        </div>
        <div class="community-new">
          <%= link_to "コミュニティ作成", new_community_path, class: 'new-btn btn btn-default' %>
        </div>
      </div>
    
  </div>
</div>