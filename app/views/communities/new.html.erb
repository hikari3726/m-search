<div class="community-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <div class="new-container background-color">
          <h2 class="text center">コミュニティ作成</h2>
          <div class="new-form">
            <%= form_for @community do |f| %>
              <!--エラーメッセージ-->
              <div class="form-group">
                <%= f.file_field :image %>
              </div>
              <div class="form-group">
                <%= f.label :title, class: 'btn-text' %>
                <%= f.text_field :title, class: 'form-control' %> 
              </div>
              <div class="form-group">
                <%= f.label :description, class: 'btn-text' %>
                <%= f.text_area :description, placeholder: "300字以内" , rows: 10, class: 'form-control' %>
              </div>
              
              <%= f.submit "作成", class: 'btn-block btn btn-default' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
